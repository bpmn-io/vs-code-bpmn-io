{
  "rules": {
    "no-string-throw": true,
    "no-unused-expression": true,
    "no-duplicate-variable": true,
    "curly": true,
    "class-name": true,
    "semicolon": [ true, "always" ],
    "triple-equals": true,
    "no-unused-expression-chai": true,
    "indent": [true, "spaces", 2]
  },
  "defaultSeverity": "warning",
  "rulesDirectory": [
    "tslint-no-unused-expression-chai"
  ]
}
